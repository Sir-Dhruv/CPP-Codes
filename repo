package com.example.payroll.repository;

import com.example.payroll.model.ApproverRemarks;
import com.example.payroll.model.PayrollBatch;
import com.example.payroll.model.User;
import org.springframework.data.jpa.repository.JpaRepository;
import org.springframework.stereotype.Repository;

import java.util.List;

@Repository
public interface ApproverRemarksRepository extends JpaRepository<ApproverRemarks, Long> {

    List<ApproverRemarks> findByPayrollBatch(PayrollBatch payrollBatch);

    List<ApproverRemarks> findByApprover(User approver);
}